{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/build/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/server.js" // route API requests to Node server
        },
        {
            "src": "/(.*)",
            "dest": "client/build/$1" // serve static files from the client build
        }
    ],
    "installCommand": "npm install"
}
