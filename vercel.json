{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/server.js"
      },
      {
        "src": "/",
        "dest": "client/index.html",
        "headers": { "Content-Type": "text/html" }
      },
      {
        "src": "/index.html",
        "dest": "client/index.html",
        "headers": { "Content-Type": "text/html" }
      },
      {
        "src": "/(.*)",
        "dest": "client/$1"
      }
    ]
  }