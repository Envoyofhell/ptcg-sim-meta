{
    "name": "ptcg-sim-meta-monorepo",
    "version": "1.5.1",
    "private": true,
    "workspaces": [
      "client",
      "workers",
      "server"
    ],
    "scripts": {
      "build": "pnpm run build:client && pnpm run build:workers",
      "build:client": "cd client && pnpm run build",
      "build:workers": "cd workers && pnpm run build",
      "dev": "pnpm run dev:client",
      "dev:client": "cd client && pnpm run dev",
      "dev:workers": "cd workers && pnpm run dev"
    },
    "engines": {
      "node": ">=18.0.0"
    },
    "packageManager": "pnpm@9.10.0"
  }